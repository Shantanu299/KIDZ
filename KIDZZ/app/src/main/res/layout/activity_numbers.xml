    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <fragment
                android:id="@+id/fragment"
                android:name="com.shantanu.kidzz.FirstFragment"
                android:layout_width="match_parent"
                android:layout_height="380sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                tools:layout="@layout/fragments_first"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />


            <HorizontalScrollView
                android:id="@+id/myHsView"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fragment"
                android:layout_marginTop="17dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="410dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/num_0_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleY="5"
                        android:text="0"
                        android:textScaleX="5" />

                    <Button
                        android:id="@+id/num_1_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:text="1"
                        android:textScaleX="5"
                        android:scaleY="5"/>

                    <Button
                        android:id="@+id/num_2_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:text="2"
                        android:textScaleX="5"
                        android:scaleY="5"/>

                    <Button
                        android:id="@+id/num_3_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:text="3"
                        android:textScaleX="5"
                        android:scaleY="5"/>

                    <Button
                        android:id="@+id/num_4_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:text="4"
                        android:textScaleX="5"
                        android:scaleY="5"/>

                    <Button
                        android:id="@+id/num_5_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:text="5"
                        android:textScaleX="5"
                        android:scaleY="5"/>

                    <Button
                        android:id="@+id/num_6_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:text="6"
                        android:textScaleX="5"
                        android:scaleY="5"/>

                    <Button
                        android:id="@+id/num_7_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:text="7"
                        android:textScaleX="5"
                        android:scaleY="5"/>

                    <Button
                        android:id="@+id/num_8_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:text="8"
                        android:textScaleX="5"
                        android:scaleY="5"/>

                    <Button
                        android:id="@+id/num_9_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/transparent"
                        android:text="9"
                        android:textScaleX="5"
                        android:scaleY="5"/>
                </LinearLayout>
            </HorizontalScrollView>


        </RelativeLayout>
    </ScrollView>
