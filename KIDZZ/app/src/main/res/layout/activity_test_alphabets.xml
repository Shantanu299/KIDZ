<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shantanu.kidzz.test_alphabets">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/nature"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_drawing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/buttonB"
                    android:layout_alignLeft="@+id/buttonA"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/buttonB"
                    android:layout_alignStart="@+id/buttonA"
                    android:layout_marginTop="100dp"
                    android:background="@color/white"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Select Letter"
                    android:textColor="@android:color/background_dark"
                    android:textSize="37dp" />

                <Button
                    android:id="@+id/buttonQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_drawing"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@+id/buttonB"
                    android:layout_toStartOf="@+id/buttonB"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="A"
                    android:textSize="38dp" />

                <Button
                    android:id="@+id/buttonA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/buttonC"
                    android:layout_alignStart="@+id/buttonC"
                    android:layout_below="@+id/buttonQ"
                    android:layout_marginTop="53dp"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Option A" />

                <Button
                    android:id="@+id/buttonB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/buttonA"
                    android:layout_alignBottom="@+id/buttonA"
                    android:layout_toEndOf="@+id/buttonNext"
                    android:layout_toRightOf="@+id/buttonNext"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Option B" />

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttonA"
                    android:layout_marginTop="24dp"
                    android:layout_toLeftOf="@+id/buttonNext"
                    android:layout_toStartOf="@+id/buttonNext"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Option C" />

                <Button
                    android:id="@+id/buttonD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/buttonC"
                    android:layout_alignBottom="@+id/buttonC"
                    android:layout_alignLeft="@+id/buttonB"
                    android:layout_alignStart="@+id/buttonB"
                    android:layout_marginBottom="6dp"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Option D" />

                <Button
                    android:id="@+id/buttonNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttonD"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Next" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
