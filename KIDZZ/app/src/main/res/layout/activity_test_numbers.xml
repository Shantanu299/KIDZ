<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shantanu.kidzz.test_numbers">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/nature"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/button_B"
                    android:layout_alignLeft="@+id/button_A"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/button_B"
                    android:layout_alignStart="@+id/button_A"
                    android:layout_marginTop="100dp"
                    android:background="@color/white"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Select Number"
                    android:textColor="@android:color/background_dark"
                    android:textSize="38dp" />

                <Button
                    android:id="@+id/button_Q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_View"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@+id/button_B"
                    android:layout_toStartOf="@+id/button_B"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="A"
                    android:textSize="38dp" />

                <Button
                    android:id="@+id/button_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/button_C"
                    android:layout_alignStart="@+id/button_C"
                    android:layout_below="@+id/button_Q"
                    android:layout_marginTop="53dp"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Option A" />

                <Button
                    android:id="@+id/button_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button_A"
                    android:layout_alignBottom="@+id/button_A"
                    android:layout_toEndOf="@+id/button_Next"
                    android:layout_toRightOf="@+id/button_Next"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Option B" />

                <Button
                    android:id="@+id/button_C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_A"
                    android:layout_marginTop="24dp"
                    android:layout_toLeftOf="@+id/button_Next"
                    android:layout_toStartOf="@+id/button_Next"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Option C" />

                <Button
                    android:id="@+id/button_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button_C"
                    android:layout_alignBottom="@+id/button_C"
                    android:layout_alignLeft="@+id/button_B"
                    android:layout_alignStart="@+id/button_B"
                    android:layout_marginBottom="6dp"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Option D" />

                <Button
                    android:id="@+id/button_Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_D"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Next" />


            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
